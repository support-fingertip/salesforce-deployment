<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Block_Available_When_Booking_Exists</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Status__c, &quot;Available&quot;),
    NOT(ISBLANK(Current_Booking__c))
)</errorConditionFormula>
    <errorMessage>Cannot change status to Available while a current booking exists.</errorMessage>
</ValidationRule>
