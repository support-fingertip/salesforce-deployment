<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Blocked_Until_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Status__c, &quot;Blocked&quot;),
    ISBLANK(Blocked_Until__c)
)</errorConditionFormula>
    <errorMessage>Blocked Until date is required when status is Blocked.</errorMessage>
</ValidationRule>
